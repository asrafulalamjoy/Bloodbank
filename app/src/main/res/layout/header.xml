<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/headerbackgoundnew">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="60dp"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:id="@+id/nav_user_image"
        android:src="@drawable/avataricon"/>
    
    <TextView
        android:id="@+id/nav_user_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/nav_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@mail.com"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/nav_user_bloodgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Group"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <TextView
        android:textAllCaps="true"
        android:id="@+id/nav_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Type"
        android:textSize="16sp"
        android:textColor="@color/white"/>










</LinearLayout>