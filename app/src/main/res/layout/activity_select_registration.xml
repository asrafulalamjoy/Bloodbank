<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/background"
    tools:context=".SelectRegistrationActivity">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="155dp"
        android:background="@drawable/logowhite"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/donorButton"
        android:layout_width="match_parent"
        android:layout_height=  "wrap_content"
        android:padding="18dp"
        android:background="@drawable/boxradius"
        android:textColor="#D70032"
        android:text="DONOR REGISTRATION"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/recipientButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textColor="@color/white"
        android:text="RECIPIENT REGISTRATION"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:background="@drawable/borderbox"
        />
    <TextView
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Registered? Sign In"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="200dp"/>
</LinearLayout>